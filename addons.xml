		<checksum>https://raw.githubusercontent.com/mikelsantos/kodi/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/mikelsantos/kodi/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>iKe kodi addons repository</summary>
   		<description lang="en">iKe kodi addons repository</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

